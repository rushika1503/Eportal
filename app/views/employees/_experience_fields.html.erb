<div class="row">
  <div class="col">
    <%=f.label :Title%>
    <%=f.text_field :title, class:"form-control", placeholder: "Title" %>
  </div>
 </div>
 <div class="row"> 
  <div class="col">
    <%=f.label :Employement_Type%>
    <%=f.select(:employement_type, ['','Full-time', 'Part-time','Self-employed','Freelance','Internship','Trainee'], {},class:"form-control") %>
  </div>
</div>

<div class="row">
  <div class="col">
    <%=f.label :Company_Name%>
    <%=f.text_field :company_name , class:"form-control", placeholder:"CompanyName" %>
  </div>
 </div> 
 <div class="row">
  <div class="col">
    <%=f.label :Location%>
    <%=f.text_field :location, class:"form-control", placeholder: "Location"%>
  </div>
</div>

<div class="row">
  <div class="col">
    <%=f.label :Start_Date%>
    <%=f.date_field :start_date, class:"form-control", placeholder: "StartDate" %>
  </div>
  <div class="col">
    <%=f.label :End_Date%>
    <%=f.date_field :end_date, class:"form-control" ,placeholder: "EndDate" %>
  </div>
</div>

<%=f.hidden_field :_destroy %>
